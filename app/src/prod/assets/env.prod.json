{
  "baseUrl": "https://api.msgmates.com/",
  "wsUrl": "wss://api.msgmates.com/ws",

  "auth": {
    "tokenEndpoint": "/v1/auth/token",
    "refreshEndpoint": "/v1/auth/refresh",
    "revokeEndpoint": "/v1/auth/revoke",

    "requestCodeEndpoint": "/auth/request-code",
    "verifyCodeEndpoint": "/auth/verify-code",
    "loginPasswordEndpoint": "/v1/auth/login/password",

    "deviceRegisterEndpoint": "/v1/device/register",

    "jwksUrl": "https://api.msgmates.com/.well-known/jwks.json",
    "audience": "msgmates-mobile",
    "issuer": "https://api.msgmates.com"
  },

  "timeouts": { 
    "connectSec": 10, 
    "readSec": 20, 
    "writeSec": 20,
    "uploadReadSec": 60,
    "uploadWriteSec": 60
  },

  "messaging": {
    "sendEndpoint": "/v1/messages/send",
    "syncEndpoint": "/v1/messages/sync",
    "receiptEndpoint": "/v1/messages/receipts",
    "uploadEndpoint": "/v1/upload",
    "downloadEndpoint": "/v1/download"
  },

  "tls": {
    "allowCleartext": false,
    "certificatePins": [
      "sha256/o3j9lP/eXh0ycvzQT11VI64T2bKiTceOA0Uu3Sao4gw="
    ],
    "h2": true,
    "minTlsVersion": "TLSv1.3"
  },

  "wsCfg": { "authMode": "header" }
}
