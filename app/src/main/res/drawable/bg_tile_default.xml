<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Köşeler -->
    <corners android:radius="16dp" />

    <!-- Kenarlık (opsiyonel, istersen kaldır) -->
    <stroke
        android:width="1dp"
        android:color="#1FFFFFFF"/>

    <!-- Gradyan: MsgMates mavi–turkuaz–yeşil -->
    <gradient
        android:startColor="#1A73E8"
        android:centerColor="#00C2CC"
        android:endColor="#22C55E"
        android:angle="45"
        android:type="linear" />

    <!-- İç boşluk (opsiyonel) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>