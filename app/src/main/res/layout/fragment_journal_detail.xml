                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tags Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/journal_padding_medium"
                app:cardCornerRadius="@dimen/journal_card_corner_radius"
                app:cardElevation="@dimen/journal_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/journal_card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/journal_padding_small"
                        android:text="@string/journal_tags"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="@color/journal_text_primary" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#mutlu"
                            app:chipBackgroundColor="@color/journal_tag_background"
