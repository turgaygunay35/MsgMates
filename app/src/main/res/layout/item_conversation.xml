<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:padding="16dp"
    android:background="@drawable/bg_conversation_item"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="80dp"
    android:elevation="2dp">

    <!-- Avatar -->
    <FrameLayout
        android:id="@+id/fl_avatar_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_avatar_blue"
            android:scaleType="centerCrop" />

        <!-- İlk harf göstergesi -->
        <TextView
            android:id="@+id/tv_avatar_letter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Group indicator for group conversations -->
    <ImageView
        android:id="@+id/iv_group_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_group"
        android:background="@drawable/bg_group_indicator"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar" />

    <!-- Conversation title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Kullanıcı Adı"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/fl_avatar_container"
        app:layout_constraintTop_toTopOf="@id/fl_avatar_container"
        app:layout_constraintEnd_toStartOf="@id/btn_overflow" />

    <!-- Timestamp - Sola kaydırıldı -->
    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="18:30"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toStartOf="@id/btn_overflow"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <!-- Last message -->
    <TextView
        android:id="@+id/tv_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Son mesaj burada görünür..."
        android:textSize="14sp"
        android:textColor="#757575"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/fl_avatar_container"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toStartOf="@id/tv_unread_count" />

    <!-- Unread count badge -->
    <TextView
        android:id="@+id/tv_unread_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="5"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_unread_badge"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toStartOf="@id/btn_overflow"
        app:layout_constraintTop_toBottomOf="@id/tv_timestamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_last_message" />

    <!-- Mute icon -->
    <ImageView
        android:id="@+id/iv_mute_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_notifications_off"
        android:background="@drawable/bg_mute_icon"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tv_last_message"
        app:layout_constraintTop_toTopOf="@id/tv_last_message" />

    <!-- Overflow button - Sağa alındı -->
    <ImageButton
        android:id="@+id/btn_overflow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Daha fazla seçenek"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
