<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtre SeÃ§enekleri"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_move_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_move_up"
        android:layout_marginBottom="8dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_move_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_move_down"
        android:layout_marginBottom="8dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_toggle_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_hide"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>
