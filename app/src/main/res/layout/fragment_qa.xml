<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QA Test Panel"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Dark Theme Toggle -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tema Testi"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Karanlık Tema Aç/Kapat"
                    android:tag="qa_btn_toggle_theme"
                    app:icon="@drawable/ic_dark_mode" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- RTL Simulation -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RTL Testi"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RTL Simülasyonu"
                    android:tag="qa_btn_toggle_rtl"
                    app:icon="@drawable/ic_rtl" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Badge Test -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Badge Testi"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_test_badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99+ Badge Testi"
                    android:tag="qa_btn_test_badge"
                    app:icon="@drawable/ic_badge" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Offline Simulation -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bağlantı Testi"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_simulate_offline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offline Simülasyon"
                    android:tag="qa_btn_simulate_offline"
                    app:icon="@drawable/ic_offline"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_disaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Afet Modu Aç/Kapat"
                    android:tag="qa_btn_toggle_disaster"
                    app:icon="@drawable/ic_disaster" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mevcut Durum"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_qa_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tema: Açık\nRTL: Kapalı\nBadge: Normal\nBağlantı: Online"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
