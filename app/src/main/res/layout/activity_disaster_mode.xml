<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/disaster_mode_red"
        app:title="🚨 Afet Modu"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Toggle Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/disaster_mode_red">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚨 Afet Modu"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acil durumlarda güvenlik durumunuzu paylaşın"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_disaster_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@android:color/white"
                        app:trackTint="@android:color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Status Text -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afet modu kapalı - Özellikler devre dışı"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Main Safety Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_im_safe"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="🟢 Ben Hayattayım"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark"
                style="@style/Widget.Material3.Button"
                app:cornerRadius="32dp"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- Quick Message Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hazır Mesajlar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sos"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="SOS"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_red_dark"
                    style="@style/Widget.Material3.Button"
                    app:cornerRadius="24dp"
                    android:layout_marginEnd="4dp"
                    android:enabled="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_water"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Su Lazım"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    style="@style/Widget.Material3.Button"
                    app:cornerRadius="24dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:enabled="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="İyiyim"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    style="@style/Widget.Material3.Button"
                    app:cornerRadius="24dp"
                    android:layout_marginStart="4dp"
                    android:enabled="false" />

            </LinearLayout>

            <!-- Tools Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Araçlar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_flashlight"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="🔦 Fener"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="24dp"
                    android:layout_marginEnd="4dp"
                    android:enabled="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_siren"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="🚨 Siren"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="24dp"
                    android:layout_marginStart="4dp"
                    android:enabled="false" />

            </LinearLayout>

            <!-- Energy Saving Switch -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enerji Tasarrufu"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Düşük güç tüketimi için"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_energy_saving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Offline Chat Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_offline_chat"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="💬 Çevrimdışı Mesajlaşma"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="28dp"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- Emergency Info Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_emergency_info"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="📞 Acil Durum Bilgileri"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_disaster_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚙️ Afet Modu Ayarları"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
