<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Logo/Icon -->
    <ImageView
        android:id="@+id/iv_empty_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_chat_empty"
        android:alpha="0.6"
        android:layout_marginBottom="24dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Henüz sohbet yok"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_empty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni bir sohbet başlatmak için + butonuna basın"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- Action button (optional) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_empty_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni Sohbet"
        android:layout_marginTop="24dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>

