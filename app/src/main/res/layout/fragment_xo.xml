<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_50">

    <!-- Header -->
    <include layout="@layout/layout_game_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- XOX Başlığı -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XOX"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="20dp" />

            <!-- Oyun Durumu -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sıra: Sen (X)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="20dp"
                android:background="@drawable/status_background"
                android:padding="12dp" />

            <!-- 6x6 Oyun Tahtası -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/game_board_background"
                android:padding="16dp"
                android:elevation="4dp">

                <GridLayout
                    android:id="@+id/gameGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="6"
                    android:columnCount="6"
                    android:useDefaultMargins="true">

                    <!-- 6x6 = 36 buton oluşturacağız -->
                    <Button android:id="@+id/b00" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b01" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b02" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b03" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b04" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b05" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>

                    <Button android:id="@+id/b10" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b11" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b12" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b13" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b14" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b15" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>

                    <Button android:id="@+id/b20" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b21" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b22" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b23" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b24" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b25" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>

                    <Button android:id="@+id/b30" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b31" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b32" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b33" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b34" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b35" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>

                    <Button android:id="@+id/b40" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b41" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b42" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b43" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b44" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b45" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>

                    <Button android:id="@+id/b50" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b51" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b52" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b53" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b54" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>
                    <Button android:id="@+id/b55" android:layout_width="60dp" android:layout_height="60dp" android:textSize="24sp" android:background="@drawable/xo_button_background"/>

                </GridLayout>

            </FrameLayout>

            <!-- Kontrol Butonları -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReset"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Sıfırla"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="24dp"
                    android:backgroundTint="@color/primary_blue"
                    android:layout_marginEnd="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNewGame"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Yeni Oyun"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="24dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>