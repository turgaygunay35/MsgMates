root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{xml}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{md}]
trim_trailing_whitespace = false

[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{json}]
indent_style = space
indent_size = 2
